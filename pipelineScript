pipeline {
	agent any

	stages {
		stage('build'){

			steps{
				withMaven(maven: 'MVN353'){

				sh 'mvn clean compile -f ./mvn_project/pom.xml -X'
				} 
				
			}
		}
		stage('test'){
			steps{
			withMaven(maven: 'MVN353'){
					sh 'mvn test -X'
					//junit 'reports/**/*.xml'
				}
			}
		}
		stage('Deploy'){
			steps{
				withMaven(maven: 'MVN353'){

					sh 'make deploy -X'
				}			
			}
		}

	}


}